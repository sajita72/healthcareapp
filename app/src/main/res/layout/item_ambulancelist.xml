<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="357dp"
    android:layout_height="150dp"
    android:layout_marginTop="5dp"
    android:layout_marginStart="20dp"
    android:background="@drawable/top_image"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.1"
        app:layout_constraintDimensionRatio="1:1"
        android:scaleType="centerCrop"
        android:background="@drawable/account"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:id="@+id/ivAmb1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/splash_screen_logo"/>

    <ImageView
        android:id="@+id/ivAmb2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.1"
        android:background="@drawable/account"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivAmb1"
        android:contentDescription="@string/splash_screen_logo"
        />

    <ImageView
        android:id="@+id/ivAmb3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.1"
        android:background="@drawable/account"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="1:1"

        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivAmb2"
        android:contentDescription="@string/splash_screen_logo"
        />




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location Name "
        app:layout_constraintStart_toEndOf="@+id/ivAmb1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/green"
        android:textSize="20sp"
        android:textStyle="normal"
        android:id="@+id/tvLocationName"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Service Area"
        app:layout_constraintStart_toEndOf="@+id/ivAmb2"
        app:layout_constraintTop_toBottomOf="@+id/tvLocationName"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/green"
        android:textSize="20sp"
        android:textStyle="normal"
        android:id="@+id/tvServiceArea"/>

    <TextView
        android:id="@+id/tvPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Phone Number"
        android:textColor="@color/green"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@+id/ivAmb3"
        app:layout_constraintTop_toBottomOf="@+id/tvServiceArea" />


</androidx.constraintlayout.widget.ConstraintLayout>