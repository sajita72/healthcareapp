<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="357dp"
    android:layout_height="150dp"
    android:layout_marginTop="5dp"
    android:layout_marginStart="20dp"
    android:background="@drawable/top_image"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintDimensionRatio="2:2"
        android:scaleType="centerCrop"
        android:background="@drawable/account"
        android:id="@+id/ivProduct"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product Name"
        app:layout_constraintStart_toEndOf="@+id/ivProduct"
        app:layout_constraintTop_toTopOf="@+id/ivProduct"
        android:layout_marginStart="5dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/green"
        android:textSize="24sp"
        android:textStyle="bold"
        android:id="@+id/tvProductName"/>
    <TextView
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:text="Product Speciality Product"
        app:layout_constraintStart_toEndOf="@+id/ivProduct"
        app:layout_constraintTop_toBottomOf="@+id/tvProductName"
        android:layout_marginStart="5dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/green"
        android:alpha="0.8"
        android:textSize="22sp"
        android:textStyle="bold"
        android:id="@+id/tvProductSpeciality"/>

    <TextView
        android:id="@+id/tvProductDegree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="55dp"
        android:text="Product Degree"
        android:textColor="@color/green"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@+id/ivProduct"
        app:layout_constraintTop_toTopOf="@+id/tvProductSpeciality" />


</androidx.constraintlayout.widget.ConstraintLayout>