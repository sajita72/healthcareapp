<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="357dp"
    android:layout_height="150dp"
    android:layout_marginTop="5dp"
    android:layout_marginStart="20dp"
    android:background="@drawable/top_image"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintDimensionRatio="2:2"
        android:scaleType="centerCrop"
        android:background="@drawable/pbone"
        android:id="@+id/ivArticle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>



    <TextView
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:text="Articles Name"
        app:layout_constraintStart_toEndOf="@+id/ivArticle"
        app:layout_constraintTop_toTopOf="@+id/ivArticle"
        android:layout_marginStart="5dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/green"
        android:textSize="22sp"
        android:textStyle="bold"
        android:id="@+id/tvArticleName"/>
    <TextView
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:text="Articles Headlines"
        app:layout_constraintStart_toEndOf="@+id/ivArticle"
        app:layout_constraintTop_toBottomOf="@+id/tvArticleName"
        android:layout_marginStart="5dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/green"

        android:textSize="20sp"
        android:textStyle="normal"
        android:id="@+id/tvArticleSpeciality"/>

    <Button
        android:id="@+id/btnreadmore"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="170dp"
        android:background="@drawable/btn_bg"
        android:layout_gravity="center"
        android:text="READ MORE"
        android:textSize="16sp"
        android:textStyle="bold"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvArticleSpeciality"/>


</androidx.constraintlayout.widget.ConstraintLayout>